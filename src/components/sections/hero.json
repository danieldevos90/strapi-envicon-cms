{
  "collectionName": "components_sections_heroes",
  "info": {
    "displayName": "Hero Section",
    "description": "Hero section with title, subtitle, description, carousel images, and buttons"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "carousel": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "videos"]
    },
    "video": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["videos"]
    },
    "videoUrl": {
      "type": "string",
      "required": false
    },
    "buttons": {
      "type": "component",
      "repeatable": true,
      "component": "ui.button",
      "min": 0,
      "max": 2
    }
  }
}

