{
  "collectionName": "components_solution_safety_entries",
  "info": {
    "displayName": "Safety Entry",
    "description": "Single safety entry with icon, image, title, and description. Icon supports Lucide icons (e.g., 'lucide:Shield', 'lucide:Check') or icon name (e.g., 'Shield', 'Check')"
  },
  "options": {},
  "attributes": {
    "icon": {
      "type": "string",
      "required": false,
      "default": "Shield"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "imageAlt": {
      "type": "string",
      "required": false
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    }
  }
}

